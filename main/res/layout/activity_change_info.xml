<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_personal_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.fzu.xyjz.PersonalInfoActivity">

    <TextView
        android:id="@+id/personalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="个人信息"
        android:textSize="20sp" />

    <Button
        android:id="@+id/goBack2PersonalInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="返回"
        android:textSize="40sp" />

    <Button
        android:id="@+id/confirmInfoChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:text="确定"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/newCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cityLabel"
        android:layout_alignBottom="@+id/cityLabel"
        android:layout_toEndOf="@+id/birthdayLabel"
        android:layout_toRightOf="@+id/birthdayLabel"
        android:text="未知"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/newBirthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/birthdayLabel"
        android:layout_alignBottom="@+id/birthdayLabel"
        android:layout_toEndOf="@+id/cityLabel"
        android:layout_toRightOf="@+id/cityLabel"
        android:inputType="date"
        android:text="未知"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/birthdayLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newCity"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:text="出生日期："
        android:textSize="20sp" />

    <TextView
        android:id="@+id/cityLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newSex"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:text="所在城市："
        android:textSize="20sp" />

    <TextView
        android:id="@+id/nicknameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/personalLabel"
        android:layout_alignBottom="@+id/newNickname"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:text="昵称:"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/sexLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/nicknameLabel"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="32dp"
        android:text="性别:"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/newSex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sexLabel"
        android:layout_alignBottom="@+id/sexLabel"
        android:layout_toStartOf="@+id/newCity"
        android:layout_toLeftOf="@+id/newCity"
        android:text="未知"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/newNickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/newSex"
        android:layout_alignLeft="@+id/newSex"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:text="未知"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/newEmailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newBirthday"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:text="电子邮箱："
        android:textSize="20sp" />

    <EditText
        android:id="@+id/newEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/newEmailLabel"
        android:layout_alignBottom="@+id/newEmailLabel"
        android:layout_toEndOf="@+id/newEmailLabel"
        android:layout_toRightOf="@+id/newEmailLabel"
        android:inputType="textEmailAddress"
        android:text="未知"
        android:textSize="20sp" />
</RelativeLayout>
