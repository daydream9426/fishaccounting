<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_become_vip"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.fzu.xyjz.becomeVIPActivity">

    <Button
        android:id="@+id/buyMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="113dp"
        android:text="包月套餐"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buySeason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buyMonth"
        android:layout_alignBottom="@+id/buyMonth"
        android:layout_centerHorizontal="true"
        android:text="包季套餐"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buyForever"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buySeason"
        android:layout_alignBottom="@+id/buySeason"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="永久套餐"
        android:textSize="20sp" />

    <Button
        android:id="@+id/goBack2PersonalInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="返回"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/VIP_EndTimeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="会员截止日期："
        android:textSize="20sp" />

    <TextView
        android:id="@+id/VIP_EndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:layout_toEndOf="@+id/VIP_EndTimeLabel"
        android:layout_toRightOf="@+id/VIP_EndTimeLabel"
        android:text=""
        android:textSize="20sp" />
</RelativeLayout>
